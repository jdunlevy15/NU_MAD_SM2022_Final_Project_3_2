<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutEmployeeHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentEmployeeHome"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewEmployeeWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/home_welcome_label"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEmployeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/placeholder_text"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewEmployeeWelcome"
        app:layout_constraintStart_toEndOf="@+id/textViewEmployeeWelcome"
        app:layout_constraintTop_toTopOf="@+id/textViewEmployeeWelcome" />

    <Button
        android:id="@+id/buttonEmployeeHomescreenViewDogs"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="64dp"
        android:text="@string/home_view_dogs_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmployeeName" />

    <Button
        android:id="@+id/buttonEmployeeAddDog"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:text="@string/add_dog_profile"
        app:layout_constraintEnd_toEndOf="@+id/buttonEmployeeHomescreenViewDogs"
        app:layout_constraintStart_toStartOf="@+id/buttonEmployeeHomescreenViewDogs"
        app:layout_constraintTop_toBottomOf="@+id/buttonEmployeeHomescreenViewDogs" />

    <Button
        android:id="@+id/buttonEmployeeViewApplications"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:text="@string/view_applications"
        app:layout_constraintEnd_toEndOf="@+id/buttonEmployeeAddDog"
        app:layout_constraintStart_toStartOf="@+id/buttonEmployeeAddDog"
        app:layout_constraintTop_toBottomOf="@+id/buttonEmployeeAddDog" />
</androidx.constraintlayout.widget.ConstraintLayout>

